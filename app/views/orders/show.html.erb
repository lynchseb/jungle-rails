<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h5>Email: <%= @order.email %></h5>
  </header>

  <div class="order-summary jumbotron">
    <h2>Thank you for your order!</h4>
    <h10>Your order summary: </h10>
    
    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody>
     
      <%  @line_item.each do |item| %>
        <%= render 'lineitem', product: item.product, quantity: item.quantity %>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
          Order placed on: <%= @order_date.to_formatted_s(:long_ordinal) %>
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

   
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
